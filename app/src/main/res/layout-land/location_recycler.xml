<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/jpark" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSuperFadeBG"
        android:scaleType="centerCrop" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/location_recycler"
        android:layout_width="75dp"
        android:layout_height="380dp"
        android:layout_marginBottom="@dimen/standard_margin16"
        android:layout_marginLeft="@dimen/standard_margin16"
        android:layout_marginTop="@dimen/standard_margin16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="@dimen/standard_margin16"
        android:layout_marginTop="@dimen/standard_margin16"
        android:shadowColor="@color/colorPrimary"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:text="CHOOSE A LOCATION"
        android:textSize="@dimen/large_text40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="@dimen/standard_margin16"
        android:layout_marginTop="10dp"
        android:shadowColor="@color/colorPrimary"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:text=" "
        android:textSize="@dimen/standard_text32"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_name" />


    <ImageView
        android:id="@+id/location_zoom"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginBottom="@dimen/standard_margin16"
        android:layout_marginRight="@dimen/standard_margin16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>